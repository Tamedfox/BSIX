<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cf.bsixapp.mbg.mapper.BackRoleExtMapper">

    <select id="getRoleByAdminId" resultMap="com.cf.bsixapp.mbg.mapper.BackRoleMapper.BaseResultMap">
        SELECT
            r.*
        FROM
            (
                SELECT
                  barl.role_id
                FROM
                  bsix_back_admin_role_rel barl
                WHERE
                  barl.admin_id = #{id}
            ) arl
        LEFT JOIN
          bsix_back_role r
        ON
          arl.role_id = r.id
        ORDER BY
          r.order_seq ASC
    </select>

</mapper>